{
  "version": 2,
  "name": "blockchain-document-verification",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      },
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "@react_app_api_url",
    "REACT_APP_CHAIN_ID": "@react_app_chain_id",
    "REACT_APP_CHAIN_NAME": "@react_app_chain_name",
    "REACT_APP_DOCUMENT_REGISTRY_ADDRESS": "@react_app_document_registry_address",
    "REACT_APP_ACCESS_CONTROL_ADDRESS": "@react_app_access_control_address"
  }
}
