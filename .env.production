# Production Environment Configuration
# Copy this file to .env and update with your production values

# Application
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# Database Configuration
MONGODB_URI=mongodb://app_user:your_secure_password@mongodb:27017/blockchain_documents?authSource=blockchain_documents&replicaSet=rs0
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=your_secure_root_password
MONGO_DATABASE=blockchain_documents
MONGO_APP_USERNAME=app_user
MONGO_APP_PASSWORD=your_secure_app_password

# Redis Configuration
REDIS_URL=redis://:your_redis_password@redis:6379
REDIS_PASSWORD=your_secure_redis_password

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_at_least_32_characters_long
JWT_EXPIRES_IN=24h

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id
ETHEREUM_NETWORK=mainnet
PRIVATE_KEY=your_ethereum_private_key_for_contract_deployment
DOCUMENT_REGISTRY_ADDRESS=0x_your_deployed_contract_address
ACCESS_CONTROL_ADDRESS=0x_your_deployed_access_control_address

# IPFS Configuration (Pinata)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_key
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your_secure_session_secret

# File Upload Configuration
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx
UPLOAD_PATH=/app/uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@domain.com
SMTP_PASS=your_email_password
FROM_EMAIL=noreply@your-domain.com

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password
PROMETHEUS_RETENTION_TIME=200h

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-backup-bucket
AWS_REGION=us-east-1

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Domain Configuration
DOMAIN_NAME=your-domain.com
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://your-domain.com/api

# Third-party Integrations
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Performance Configuration
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2
DB_MAX_IDLE_TIME=30000
DB_SERVER_SELECTION_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000

# Cache Configuration
CACHE_TTL_DEFAULT=300
CACHE_TTL_DOCUMENTS=600
CACHE_TTL_USERS=1800

# Security Headers
HSTS_MAX_AGE=63072000
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self'; connect-src 'self' wss: https:; frame-ancestors 'none';"

# Logging Configuration
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_INTERVAL=30000

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_DOCUMENT_UPLOAD=true
ENABLE_DOCUMENT_VERIFICATION=true
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOGGING=true

# Development/Testing (set to false in production)
ENABLE_CORS=false
ENABLE_DEBUG_LOGS=false
ENABLE_TEST_ROUTES=false